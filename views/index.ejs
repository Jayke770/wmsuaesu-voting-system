<!DOCTYPE html>
<html lang="en" class="font-sans antialiased transition-all">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="csrf-token" content="<%- csrf %>">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#991b1b">
    <meta name="keywords" content="wmsu, online voting system, voting system, wmsu auora, auora, voting">
    <title><%- election ? election.election_title : 'WMSU-AESU' %></title>
    <meta name="description" content="New and upgraded version of voting system">
    <meta property="og:title" content="Online Voting System">
    <meta property="og:description" content="New and upgraded version of voting system">
    <meta property="og:image" content="/assets/logo.png">
    <meta property="og:image:alt" content="Logo">
    <meta property="og:locale" content="en_US">
    <meta property="og:type" content="website">
    <meta name="twitter:card" content="summary_large_image">
    <meta property="og:url" content="https://voting-system-jayke.herokuapp.com/">
    <%- include('cdn/_index') %>
    <link rel="stylesheet" href="/css/tailwindcss/style.css">
</head>

<body class="bg-gray-300 dark:bg-[#090c10]">
    <div class="dark:bg-[#161b22] bg-gray-100 shadow-xl fixed flex w-full transition-all top-0 z-10">
        <div class="nav fixed bg-darkBlue-primary/70 h-screen hidden w-full z-20">
            <div class="nav_main dark:bg-darkBlue-secondary w-96 h-full sm:w-[calc(100vw-100px)]" animate-in="animate__animated animate__fadeInLeft ms-300" animate-out="animate__animated animate__fadeOutLeft ms-300">
                <div class="px-2 py-5 dark_border_b">
                    <a class="cls_nav float-right text-red-600 mr-2 dark:text-gray-200 text-2xl cursor-pointer">
                        <i class="fas fa-times-circle"></i>
                    </a>
                    <div class="flex h-full pl-4">
                        <p class="text-2xl text-center dark:text-gray-300 font-medium tracking-wider"><%- election ? election.election_title : 'WMSU-AESU' %></p>
                    </div>
                </div>
                <div class="flex flex-col gap-2 mt-2">
                    <%- include('election/side_menu', {
                        voterStatus: voterStatus,
                        election: is_join_election, 
                        id: data._id
                    }) %>
                </div>
            </div>
        </div>
        <div class="w-full py-2">
           <div class="float-left">
                <div class="flex flex-row justify-center items-center px-3">
                    <a class="open_nav rpl rounded-lg transition-all p-[8px] text-gray-900 dark:text-gray-200 text-xl cursor-pointer mr-1 last:mr-0">
                        <i class="fas fa-bars"></i>
                    </a>
                </div>
           </div>
           <div class="float-right h-full">
                <div class="flex flex-row gap-4 mr-1 justify-center items-center px-3 h-full">
                    <a class="rounded-lg transition-all p-[6px] text-gray-900 dark:text-gray-200 text-2xl cursor-pointer mr-1 last:mr-0">
                        <i class="far fa-bell"></i>
                    </a>
                    <a class="rounded-lg transition-all peer p-[8px] text-gray-900 dark:text-gray-200 text-2xl cursor-pointer mr-1 last:mr-0">
                        <i class="far fa-comment-lines"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <%- include('election/main', {
        election: election, 
        is_join_election: is_join_election, 
        voterStatus: voterStatus
    }) %>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/index.js"></script>
    <script src="/js/audio.js"></script>
    <script src="/js/toast.js"></script>
    <script src="/js/audio_file.js"></script>
    <script src="/js/avatar.js"></script>
    <script src="/js/time.js"></script>
    <script src="/js/theme.js"></script>
    <script src="/js/fetch.js"></script>
    <script>
        $.ripple(".rpl", {
                debug: false,
                on: 'mousedown',
                opacity: 0.3,
                color: "auto",
                multi: false,
                duration: 0.7,
                rate: function(pxPerSecond) {
                    return pxPerSecond;
                },
                easing: 'linear'
            })
    </script>
</body>
</html>
