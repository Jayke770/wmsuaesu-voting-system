<div class="flex flex-col p-2 animate__animated animate__fadeInRight ms-500">
    <div class="flex flex-col gap-3">
        <div class="grid grid-cols-3 dark_border shadow-lg p-2 rounded-lg cursor-pointer rpl">
            <div class="flex flex-row items-center col-span-2">
                <p class="dark:text-gray-300 text-bluegray-900">Auto accept candidates</p>
            </div>
            <div class="flex flex-row justify-end items-center w-full">
                <div class="flex items-center justify-end w-full">
                    <label for="toggle" class="flex items-center cursor-pointer">
                        <div class="relative">
                            <input <%- election.autoAccept_candidates ? 'checked' : '' %> type="checkbox" id="toggle" class="auto_accept_candidates sr-only peer">
                            <div class="block dark:bg-gray-700 w-10 h-6 rounded-full"></div>
                            <div class="peer-checked:bg-purple-500 peer-checked:translate-x-[100%] absolute left-1 top-1 bg-white w-4 h-4 rounded-full transition-all"></div>
                        </div>
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>