<div class="w-full z-10 bg-gray-100 dark:bg-darkBlue-secondary shadow-lg grid grid-cols-2 fixed top-0 p-2 px-3 transition-all">
    <div class="flex justify-start items-center">
        <a class="return_main rpl transition-all dark:text-gray-200 text-bluegray-600 text-2xl px-2 cursor-pointer mr-2">
            <i class="fa fa-arrow-circle-left"></i>
        </a>
        <span class="font-bold text-purple-700 dark:text-purple-500 text-xl xsm:text-base">Course & Year</span>
    </div>
    <div class="flex items-center justify-end">
        <a class="add_cy_btn flex flex-row gap-2 items-center cursor-pointer rpl text-xl rounded-md p-2 px-3">
            <span class="text-purple-700 dark:text-purple-500">
                <i class="fas fa-plus-circle"></i>
            </span>
        </a>
    </div>
</div>
<div class="w-full flex flex-col mt-[70px] h-[calc(100vh-75px)] p-2">
    <div class="grid grid-cols-2 w-full">
        <div>
            <div class="w-full c cursor-pointer rpl sm:justify-center flex justify-start items-center rounded-l-lg bg-purple-500 dark:bg-purple-900 p-3">
                <p class="font-medium text-gray-50 dark:text-gray-200 text-base">Course</p>
            </div>
        </div>
        <div> 
            <div class="w-full y cursor-pointer rpl flex sm:justify-center justify-start items-center rounded-r-lg bg-purple-500 dark:bg-purple-900 p-3">
                <p class="font-medium text-gray-50 dark:text-gray-200 text-base">Year</p>
            </div>
        </div>
    </div>
    <div class="grid grid-cols-2 sm:grid-cols-none w-full">
        <div class="c_list flex flex-col gap-1 py-2 px-1 transition-all">
            <% if(cy.length !== 0) { %>
                <% for( let i = 0; i < cy[0].course.length; i++ ) { %>
                    <div data="<%- cy[0].course[i].id %>" style="animation-delay: <%- i * .150 %>s;" class="rpl transition-all animate__animated animate__fadeInUp ms-800 group grid bg-gray-100 even:bg-gray-200 dark:bg-darkBlue-secondary dark:even:bg-darkBlue-secondary/40 rounded-md p-3 cursor-pointer">
                        <div class="grid grid-cols-2">
                            <p class="type font-semibold text-bluegray-900 text-base dark:text-gray-300 skeleton" data="<%- cy[0].course[i].type %>"></p>
                            <div class="transition-all animate__animated animate__fadeInLeft ms-300 hidden group-hover:flex flex-row justify-end items-center">
                                <a data="<%- cy[0].course[i].id %>" class="rpl up_c px-2 cursor-pointer text-green-600">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a data="<%- cy[0].course[i].id %>" class="rpl del_c px-2 cursor-pointer text-rose-600">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <div class="rpl empty_list transition-all animate__animated animate__fadeInUp ms-300 group flex justify-center items-center dark:bg-darkBlue-secondary bg-gray-100 rounded-md p-3 cursor-pointer">
                    <p class="font-semibold text-bluegray-900 dark:text-gray-300 text-base">Nothing to fetch</p>
                </div>
            <% } %>
        </div>
        <div class="y_list flex sm:hidden flex-col gap-1 py-2 px-1 transition-all">
            <% if(cy.length !== 0) { %>
                <% for( let i = 0; i < cy[0].year.length; i++ ) { %>
                    <div data="<%- cy[0].year[i].id %>" style="animation-delay: <%- i * .150 %>s;" class="rpl transition-all animate__animated animate__fadeInUp ms-800 group grid bg-gray-100 even:bg-gray-200 dark:bg-darkBlue-secondary dark:even:bg-darkBlue-secondary/40 rounded-md p-3 cursor-pointer">
                        <div class="grid grid-cols-2">
                            <p class="type font-semibold text-bluegray-900 text-base dark:text-gray-300 skeleton" data="<%- cy[0].year[i].type %>"></p>
                            <div class="transition-all animate__animated animate__fadeInLeft ms-300 hidden group-hover:flex flex-row justify-end items-center">
                                <a data="<%- cy[0].year[i].id %>" class="rpl up_y px-2 cursor-pointer text-green-600">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a data="<%- cy[0].year[i].id %>" class="rpl del_y px-2 cursor-pointer text-rose-600">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <div class="empty_list rpl transition-all animate__animated animate__fadeInUp ms-300 group flex justify-center items-center bg-gray-100 dark:bg-darkBlue-secondary rounded-md p-3 cursor-pointer">
                    <p class="font-semibold text-bluegray-900 dark:text-gray-300 text-base">Nothing to fetch</p>
                </div>
            <% } %>
        </div>
    </div>
</div>
<div class="add_cy fixed justify-end items-center bg-gray-900/40 dark:bg-gray-900/60 p-2 hidden w-full h-full top-0 z-50">
    <div animate-in="animate__animated animate__fadeInRight ms-300" animate-out="animate__animated animate__fadeOutRight ms-300" class="add_cy_main animate__animated animate__fadeInRight ms-300 bg-gray-50 dark:bg-darkBlue-secondary dark_border flex flex-col rounded-lg h-full w-96 sm:w-full">
        <div class="flex justify-center items-center p-3 dark_border_b border-b border-gray-300">
            <p class="font-bold text-xl text-purple-500 py-2">Add Course & Year</p>
        </div>
        <form class="add_cy grid grid-rows-2 h-[calc(100%-70px)]">
            <div class="flex flex-col gap-3 pt-6 px-3">
                <label class="font-medium pl-1 dark:text-gray-400" for="course">Course</label>
                <input type="text" name="course" placeholder="Course" autocomplete="off" class="dark:text-gray-200 text-input w-full p-[10px] border border-gray-300 dark_border dark:bg-transparent outline-none focus:ring-2 focus:ring-purple-400 dark:focus:ring-purple-500 dark:focus:border-purple-500 transition-all rounded-lg">
                <label class="font-medium pl-1 dark:text-gray-400" for="year">Year</label>
                <input type="text" name="year" placeholder="Year" autocomplete="off" class="dark:text-gray-200 text-input w-full p-[10px] border border-gray-300 dark_border dark:bg-transparent outline-none focus:ring-2 focus:ring-purple-400 dark:focus:ring-purple-500 dark:focus:border-purple-500 transition-all rounded-lg">
            </div>
            <div class="flex flex-row w-full justify-center items-end p-2">
                <div class="w-full flex flex-row p-1 gap-2">
                    <button type="reset" class="hidden"></button>
                    <button type="button" class="close_add_cy rpl transition-all text-red-600 dark:text-rose-500 dark:font-medium border border-rose-500 dark:border-rose-600  font-normal py-[5px] rounded-lg outline-none mt-4 w-full">Close</button>
                    <button type="submit" class="rpl dark:disabled:bg-purple-500 disabled:bg-purple-500 rpl dark:hover:bg-purple-700 hover:bg-purple-600 dark:bg-purple-800 bg-purple-700 text-white dark:text-gray-200 transition-all font-normal py-[5px] rounded-lg focus:ring focus:ring-offset-2 dark:focus:ring-purple-700 focus:ring-purple-500 focus:outline-none focus:shadow-outline mt-4 w-full">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="preload">
    <script>
       setTimeout(() => {
           $(".skeleton").each(function () {
               if (!$(this).hasClass("time")) {
                   $(this).text($(this).attr("data"))
                   $(this).removeClass("skeleton")
               }
           })
           $(".preload").remove()
       }, 1500)
    </script>
</div>
<script src="/control/js/cy.js "></script>