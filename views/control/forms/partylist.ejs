<div class="container flex flex-col gap-2">
    <div class="w-full z-10 bg-gray-100 dark:bg-darkBlue-secondary shadow-lg grid grid-cols-2 fixed top-0 p-2 px-3 transition-all">
        <div class="flex justify-start items-center">
            <a class="return_main rpl transition-all dark:text-gray-200 text-bluegray-600 text-2xl px-2 cursor-pointer mr-2">
                <i class="fa fa-arrow-circle-left"></i>
            </a>
            <span class="font-bold text-purple-800 dark:text-purple-500 text-2xl">Partylist</span>
        </div>
        <div class="flex items-center justify-end">
            <a class="add_pty_btn flex flex-row gap-2 items-center cursor-pointer rpl text-xl rounded-md p-2 px-3">
                <span class="text-purple-700 dark:text-purple-500">
                    <i class="fas fa-plus-circle"></i>
                </span>
                <span class="sm:hidden text-[17px] dark:text-purple-500 text-purple-700 font-normal">Add Partylist</span>
            </a>
        </div>
    </div>
    <div class="pty_all mt-[62px] py-3 px-2 sm:px-2 grid grid-cols-5 xl:grid-cols-4 transition-all lg:grid-cols-3 md:grid-cols-2 sm:grid-cols-none sm:flex sm:flex-col w-full h-[80%] sm:h-[calc(100vh-60px)] overflow-hidden sm:overflow-y-scroll gap-2">
        <% if (partylist.length === 0) { %>
            <div class="empty_pty p-3 col-span-5 justify-center flex bg-gray-100 rounded-xl cursor-pointer">
                <span class="text-purple-700">No Partylist to fetch</span>
            </div>
        <% } else { %>
            <% for( let i = 0; i < partylist.length; i++ ) { %>
                <div data="<%- partylist[i].id %>" style="animation-delay: <%- i * .150 %>s;" class="pty dark:bg-darkBlue-secondary sm:last:mb-4 group animate__animated animate__fadeInUp p-3 grid grid-cols-2 bg-gray-100 rounded-xl cursor-pointer">
                    <div>
                        <span class="text-bluegray-900 dark:text-gray-300 text-base font-normal break-all"><%- partylist[i].type %></span>
                    </div>
                    <div class="hidden group-hover:flex animate__animated animate__fadeInLeft ms-200 transition-all justify-end items-center gap-1">
                        <a data="<%- partylist[i].id %>" class="rpl up_pty px-2 cursor-pointer text-green-600">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a data="<%- partylist[i].id %>" class="rpl del_pty px-2 cursor-pointer text-rose-600">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
            <% } %>
        <% } %>
    </div>
</div>
<div class="add_pty p-2 z-20 fixed bg-gray-900/30 dark:bg-gray-900/50 w-full h-full hidden top-0 justify-end items-center">
    <div class="add_pty_main h-full w-96 xsm:w-full bg-gray-100 dark:bg-darkBlue-secondary dark_border rounded-xl transition-all" animate-in="animate__animated animate__fadeInRight ms-400" animate-out="animate__animated animate__fadeOutRight ms-400">
        <div class="flex flex-row justify-center items-center p-4 border-b border-gray-300 dark_border_b">
            <span class="font-bold text-xl text-purple-600 dark:text-purple-500">Add Partylist</span>
        </div>
        <form class="pty_form p-2 h-[calc(100%-61px)] bg-rose grid grid-rows-2">
            <div class=" h-full flex flex-col p-2 gap-3 justify-start pt-10">
                <input type="text" name="partylist" placeholder="Partylist" autocomplete="off" class="text-input w-full p-[10px] border dark:text-gray-200 border-gray-300 dark_border dark:bg-transparent outline-none focus:ring-2 focus:ring-purple-400 dark:focus:ring-purple-500 dark:focus:border-purple-500 transition-all rounded-lg" required>
                <div class="px-1 mt-5 text-bluegray-900 dark:text-gray-300 font-normal text-base">Total Partylist : <span class="total_pty dark:text-purple-500 text-purple-900 font-semibold">80</span></div>
            </div>
            <div class="flex flex-row w-full justify-center items-end">
                <div class="w-full flex flex-row p-1 gap-2">
                    <button type="button" class="close_add_pty rpl transition-all text-red-600 dark:text-rose-500 dark:font-medium border border-rose-500 dark:border-rose-600  font-normal py-[5px] rounded-lg outline-none mt-4 w-full">Close</button>
                    <button type="submit" class="rpl dark:disabled:bg-purple-600 disabled:bg-purple-500 rpl dark:hover:bg-purple-700 hover:bg-purple-600 dark:bg-purple-800 bg-purple-700 text-white dark:text-gray-200 transition-all font-normal py-[5px] rounded-lg focus:ring focus:ring-offset-2 dark:focus:ring-purple-700 focus:ring-purple-500 focus:outline-none focus:shadow-outline mt-4 w-full">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="/control/js/partylist.js"></script>