                                                        <option value="BSCS">
                                                        <option value="BSED">
                                                        <option value="GEN ED">
                                                    </datalist>
                                                    <input list="yr" type="text" name="year" class="animate__animated animate__fadeInTopRight form-input transition-all border-gray-300 w-full my-ring-2 focus:ring-indigo-600 rounded-md focus:ring-opacity-80 focus:border-gray-400" autocomplete="off" placeholder="Year" required>
                                                    <datalist id="yr">
                                                        <option value="1">
                                                        <option value="2">
                                                        <option value="3">
                                                        <option value="4">
                                                    </datalist>
                                                </div>
                                            </div>
                                            <div class="form-group mt-2">
                                                <p class="w-full pl-4 pr-3 py-2 text-base font-semibold animate__animated animate__fadeInDown">Student ID</p>
                                                <div class="grid grid-cols-3 gap-3 px-3 my:grid-cols-none">
                                                    <input type="text" name="student-id" class="animate__animated animate__fadeInUp form-input transition-all border-gray-300 w-full my-ring-2 focus:ring-indigo-600 rounded-md focus:ring-opacity-80 focus:border-gray-400" autocomplete="off" placeholder="Student ID" required>
                                                </div>
                                            </div>
                                            <div class="form-group mt-4">
