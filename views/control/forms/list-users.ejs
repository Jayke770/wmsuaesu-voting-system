<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link rel="stylesheet" href="/css/tailwindcss/style.css"> 
    <script src="/package/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="/package/node_modules/html2pdf.js/dist/html2pdf.bundle.min.js"></script>
</head>
<body>
    <% 
        const Data = {
            course: (id) => {
                for(let c = 0; c < data.courses.length; c++){
                    if(data.courses[c].id === id) {
                        return data.courses[c].type
                    }
                }
            }, 
            year: (id) => {
                for(let y = 0; y < data.year.length; y++){
                    if(data.year[y].id === id) {
                        return data.year[y].type
                    }
                }
            }
        }
    %>
    <div id="try" class="py-3 px-10 w-full">
        <div class="grid grid-cols-4">
            <div class="flex justify-center items-center px-2 py-7">
                <img src="/assets/logo.png">
            </div>
            <div class="col-span-2 flex flex-col gap-1 justify-center items-center">
                <span class="font-semibold">Republic of the Philippines</span>
                <span class="tracking-wide">Western Mindanao State University</span>
                <span>Aurora External Studies Unit</span>
                <span>Aurora, Zamboanga Del Sur</span>
            </div>
            <div class="flex justify-center items-center px-2 py-7">
                <img src="/assets/logo.png">
            </div>
        </div>
        <table class="w-full">
            <thead>
                <th class="border-teal-600 border-[1px] p-2 text-bluegray-900 text-left">Student ID</th>
                <th class="border-teal-600 border-[1px] p-2 text-bluegray-900 text-left">Name</th>
                <th class="border-teal-600 border-[1px] p-2 text-bluegray-900 text-left">Course</th>
                <th class="border-teal-600 border-[1px] p-2 text-bluegray-900 text-left">Year</th>
                <th class="border-teal-600 border-[1px] p-2 text-bluegray-900 text-left">Username</th>
                <th class="border-teal-600 border-[1px] p-2 text-bluegray-900 text-left">Password</th>
            </thead>
            <tbody>
                <% for(let i = 0; i < users.length; i++) { %> 
                    <tr>
                        <td class="text-sm border-teal-600 border-[1px] p-2 text-bluegray-900"><%- users[i].student_id %></td>
                        <td class="text-sm border-teal-600 border-[1px] p-2 text-bluegray-900"><%- `${users[i].firstname} ${users[i].middlename} ${users[i].lastname}` %></td>
                        <td class="text-sm border-teal-600 border-[1px] p-2 text-bluegray-900"><%- Data.course(users[i].course ) %></td>
                        <td class="text-sm border-teal-600 border-[1px] p-2 text-bluegray-900"><%- Data.year(users[i].year) %></td>
                        <td class="text-sm border-teal-600 border-[1px] p-2 text-bluegray-900"><%- users[i].username %></td>
                        <td class="text-sm border-teal-600 border-[1px] p-2 text-bluegray-900">NA</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <div class="col-span-2 flex mt-5 flex-col justify-center items-center gap-2">
            <p class="text-gray-600">Document is generated by WMSU-AESU Online Voting System</p>
            <p class="text-gray-600">Made with ❤️  by Master</p>
        </div>
    </div>
    <script>
        $(document).ready( async () => {
            var element = document.getElementById('try')
            var opt = {
                margin:       0.01,
                filename:     'users.pdf',
                image:        { type: 'jpeg', quality: 1 },
                html2canvas:  { scale: 2 },
                jsPDF:        { unit: 'mm', format: 'letter', orientation: 'l' }
            }
            await html2pdf().set(opt).from(element).save()
            setTimeout(() => {
                window.close()
            }, 500)
        })
    </script>
</body>
</html>