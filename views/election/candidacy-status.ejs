<div class="ca_status flex flex-col justify-center items-center h-full overflow-x-hidden">
    <div class="flex justify-center items-center flex-col gap-5">
        <p class="dark:text-purple-500 text-purple-800 text-2xl mb-10 animate__animated animate__fadeInDown ms-500" style="animation-delay: .250s;">Candidacy Status</p>
        <% if(candidacy.status === 'Pending') { %> 
            <div style="animation-delay: .450s;" class="dark:bg-yellow-700 bg-yellow-600 animate-pulse-2 dark:text-gray-300 px-4 py-1 rounded-lg flex flex-row items-center gap-3">
                <div class="cs_status">
                    <i class="fad animate-spin fa-spinner-third"></i>
                </div>
                <span>Pending</span>
            </div>
        <% } %>
        <% if(candidacy.status === 'Accepted') { %> 
            <div style="animation-delay: .450s;" class="animate__animated animate__fadeIn ms-500 dark:bg-teal-700/50 bg-teal-700/70 dark:text-gray-300 text-gray-100 px-4 py-1 rounded-lg flex flex-row items-center gap-3">
                <div class="cs_status dark:text-teal-500">
                    <i class="fad fa-check-circle"></i>
                </div>
                <span>Accepted</span>
            </div>
        <% } %>
        <% if(candidacy.status === 'Deleted') { %> 
            <div style="animation-delay: .450s;" class="animate__animated animate__fadeIn ms-500 dark:bg-rose-700/70 bg-rose-300/50 dark:text-gray-300 text-rose-500 px-4 py-1 rounded-lg flex flex-row items-center gap-3">
                <div class="cs_status dark:text-rose-500">
                    <i class="fad fa-trash-alt"></i>
                </div>
                <span>Candidacy form rejected</span> 
            </div> 
            <button data="<%- candidacy.id %>" style="animation-delay: .350s;" type="button" class="retry_candidacy mb-4 animate__animated animate__fadeInDown ms-500 flex flex-row gap-2 px-3 py-1 cursor-pointer rounded-md dark:bg-amber-700/70 bg-amber-300/50 transition-all dark:focus:ring-2 dark:focus:ring-offset-2 dark:focus:ring-offset-darkBlue-secondary dark:focus:ring-amber-700 rpl focus:outline-none">
                <div class="ic dark:text-amber-500 text-amber-600">
                    <i class="fad fa-redo-alt"></i>
                </div>
                <span class="dark:text-gray-200 text-amber-600 text-base">Submit again</span>
            </button>
        <% } %>
    </div>
    <div class="flex justify-center items-center">
        <div class="flex flex-col p-3 justify-center items-center">
            <% if(candidacy.status === 'Deleted') { %> 
                <div class="flex flex-col gap-1 w-full justify-center items-center col-span-2 mt-10">
                    <p class="dark:text-gray-300 text-bluegray-900 text-lg">Message</p>
                    <div class="text-center break-words dark:text-coolgray-300/80 text-bluegray-900/80 text-base px-40 lg:px-20 md:px-10 sm:px-2"><%- candidacy.msg %></div>
                </div>
            <% } else { %>
                <% if(candidacy.status !== 'Accepted') { %> 
                    <button data="<%- candidacy.id %>" style="animation-delay: .350s;" type="button" class="delete_candidacy animate__animated animate__fadeInLeft ms-500 flex flex-row gap-2 px-3 py-2 cursor-pointer rounded-md dark:bg-rose-700/70 bg-rose-700/50 transition-all dark:focus:ring-2 dark:focus:ring-offset-2 dark:focus:ring-offset-darkBlue-secondary dark:focus:ring-rose-700/70 rpl focus:outline-none">
                        <div class="ic dark:text-rose-500 text-rose-500">
                            <i class="fad fa-trash-alt"></i>
                        </div>
                        <span class="dark:text-gray-200 text-gray-100 text-base">Delete my candidacy</span>
                    </button>
                <% } %>
            <% } %>
        </div>
    </div>
</div>