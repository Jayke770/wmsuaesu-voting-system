<% if(is_join_election) { %>
    <div class="pt-16 w-full h-screen">
        <div class="p-1 grid grid-rows-3 w-full h-full">
            <div class="flex flex-col gap-3 justify-center items-center">
                <div style="animation-delay: .150s;" class="dark:text-purple-600 text-purple-700 text-6xl font-bold text-center sm:text-3xl animate__animated animate__fadeInUp"><%- election.election_title %></div>
                <div style="animation-delay: .650s;" class="dark:text-purple-300 text-purple-400 text-base animate__animated animate__fadeInDown break-words px-96 lg:px-48 md:px-20 sm:px-3 text-center"><%- election.election_description %></div>
            </div>
            <div class="mt-5 flex flex-col justify-center items-center">
                <p style="animation-delay: .150s;" class="dark:text-purple-600 text-purple-700 text-xl font-semibold animate__animated animate__fadeInUp">
                    <%- started && !end ? 'Election will end in' : started && end ? `Election ended ${endtime}` : `Election will begin in` %>
                </p>
                <div style="animation-delay: .650s;" id="e_time" class="flipdown animate__animated animate__fadeInUp" data="<%- started && !end ? election.start : started && end ? election.end : election.start %>"></div>
            </div>
            <div style="animation-delay: .750s;" class="animate__animated animate__fadeInUp flex flex-col justify-center items-center">
                <div class="flex flex-row gap-2 items-center justify-center">
                    <span class="dark:text-gray-400">Request Status : </span>
                    <% if(voterStatus.status === 'Pending') { %>
                        <span class="dark:bg-amber-700/50 bg-amber-600 dark:text-amber-500 text-gray-50 px-3 p-y-2 rounded-lg animate-pulse"><%- voterStatus.status %></span>
                    <% } else if(voterStatus.status === 'Accepted') { %>
                        <span class="dark:bg-teal-700/50 bg-teal-600 dark:text-teal-500 text-gray-50 px-3 p-y-2 rounded-lg"><%- voterStatus.status %></span>
                    <% } else if(voterStatus.status === 'Deleted') { %>
                        <span class="dark:bg-red-700/50 bg-red-600 dark:text-red-500 text-gray-50 px-3 p-y-2 rounded-lg">Request deleted</span>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <script>
        //get the election starting time  
        new FlipDown((new Date($("#e_time").attr("data")).getTime() / 1000), "e_time").start().ifEnded( () => {

        })
        //set the theme of flipdown 
        $("#e_time").removeClass(localStorage.getItem('theme') === "dark" ? 'flipdown__theme-dark' : 'flipdown__theme-light')
        $("#e_time").addClass(localStorage.getItem('theme') === "dark"? 'flipdown__theme-light' : 'flipdown__theme-dark')
    </script>
<% } else { %>
    
<% } %>