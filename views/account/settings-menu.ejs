<% 
    const Data = {
        course: (id) => {
            for(let c = 0; c < data.courses.length; c++){
                if(data.courses[c].id === id){
                    return data.courses[c].type
                }
            }
        }, 
        year: (id) => {
            for(let y = 0; y < data.year.length; y++){
                if(data.year[y].id === id){
                    return data.year[y].type
                }
            }
        }
    }
%> 
<div class="account_settings_menu_items container flex flex-col gap-3">
    <div class="w-full flex flex-col gap-2">
        <div style="animation-delay: .250s;"  class="animate__animated animate__fadeIn:eft ms-500 flex justify-start items-center">
