<div class="account_settings_item animate__animated animate__fadeInDown ms-500 overflow-x-hidden overflow-y-auto flex flex-col text-coolgray-50">
    <form data="email" class="change_email flex flex-col gap-3 p-2">
        <button type="reset"></button>
        <div class="container flex flex-col gap-1">
            <label class="text-bluegray-900 dark:text-gray-300" for="nmail">New E-mail</label>
            <input name="nmail" required placeholder="Email" type="email" class="w-full dark:bg-darkBlue-secondary outline-none appearance-none dark_border dark:bg-transparent py-2 px-3 dark:text-gray-300 rounded-lg focus:border-purple-500 dark:focus:border-purple-700 transition-all">
        </div>
        <div class="container flex flex-col gap-1">
            <label class="text-bluegray-900 dark:text-gray-300" for="pass">Password</label>
            <input name="pass" required placeholder="Enter Password to continue" type="password" class="w-full dark:bg-darkBlue-secondary outline-none appearance-none dark_border dark:bg-transparent py-2 px-3 dark:text-gray-300 rounded-lg focus:border-purple-500 dark:focus:border-purple-700 transition-all">
        </div>
        <div class="container flex justify-center items-center">
            <button type="submit" class="w-full rpl dark:bg-purple-900 dark:hover:bg-purple-800 dark:text-gray-200 transition-all text-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-800 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 ring-offset-gray-50 dark:ring-offset-darkBlue-secondary focus:ring-purple-600 dark:focus:ring-purple-800">Add E-mail</button>
        </div>
    </form>
    <div class="px-2">
        <div class="flex flex-col">
            <div class="flex py-2 items-center justify-start">
                <span class="dark:text-gray-300">Your E-mails</span>
            </div>
            <div class="flex flex-col gap-3">
                <% if(!userData.email.status) { %>
                    <div style="animation-delay: .250s;" class="animate__animated animate__fadeInUp ms-500 dark_border flex flex-col px-3 py-2 cursor-pointer rpl dark:bg-darkBlue-secondary rounded-lg shadow-lg">
                        <div class="flex flex-col items-center justify-center">
                            <p class="dark:text-gray-300 text-bluegray-900">No E-mail associated with this account</p>
                        </div>
                    </div>
                <% } else { %> 
                    <div style="animation-delay: .250s;" class="animate__animated animate__fadeInRight ms-500 dark_border flex flex-col gap-3 px-3 py-2.5 cursor-pointer rpl dark:bg-darkBlue-secondary rounded-lg shadow-lg">
                        <div class="grid grid-cols-3">
                            <p class="dark:text-gray-400 text-bluegray-900">E-mail</p>
                            <div class="flex items-center justify-end px-2 col-span-2">
                                <p class="dark:text-gray-300 text-bluegray-500 text-sm"><%- userData.email.email %></p>
                            </div>
                        </div>
                        <div class="grid grid-cols-2">
                            <p class="dark:text-gray-400 text-bluegray-900">Status</p>
                            <div class="flex justify-end items-center">
                                <% if(userData.email.status === 'Verified') { %>
                                    <span class="dark:bg-teal-700/40 bg-teal-600 dark:text-teal-500 text-gray-50 px-3 py-0.5 text-sm rounded-full"><%- userData.email.status %></span>
                                <% } %> 
                                <% if(userData.email.status === 'Not Verified') { %>
                                    <span class="dark:bg-rose-700/40 bg-rose-600 dark:text-rose-500 text-gray-50 px-3 py-0.5 text-sm rounded-full"><%- userData.email.status %></span>
                                <% } %>
                            </div>
                        </div>
                        <div class="grid grid-cols-2">
                            <p class="dark:text-gray-400 text-bluegray-900">Added</p>
                            <div class="flex justify-end items-center">
                                <p class="dark:text-gray-300 text-bluegray-500 text-sm time" data="<%- userData.email.added %>"></p>
                            </div>
                        </div>
                        <div class="grid grid-cols-2">
                            <a data-settings="email" data="<%- userData.email.id %>" class="remove_email rpl col-span-full rounded-md p-1 px-4 text-center transition-all dark:bg-rose-600/20 dark:text-rose-500 focus:outline-none">Remove</a>
                        </div>
                    </div>
                <% } %>
            </div> 
        </div>
    </div>
</div>